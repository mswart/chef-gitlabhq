# GitLab user. git by default
user: <%= @options['user'] %>

# Url to gitlab instance. Used for api calls. Should be ends with slash.
gitlab_url: "http://localhost/"

http_settings:
#  user: someone
#  password: somepass
  self_signed_cert: <%= @options['self_signed_cert'] %>

# Repositories path
repos_path: "<%= @options['home'] %>/repositories"

# File used as authorized_keys for gitlab user
auth_file: "<%= @options['home'] %>/.ssh/authorized_keys"
